{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*":["./src/*"]
        },

        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Node",

        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "skipLibCheck": true,

        "isolatedModules": true,
        "noEmit": true,

        "allowJs": true,
        "checkJs": false,

        "allowImportingTsExtensions": true,
        "esModuleInterop": true,
        "jsx": "react-jsx"

        /* linting */
        // "strict": true,
        // "noUnusedLocals": true,
        // "noUnusedParameters": true
    },
    "include": ["src"]
}
